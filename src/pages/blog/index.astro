---
import Layout from '../../layouts/Layout.astro';

const posts = [
  {
    title: 'Getting Started with Web Development',
    slug: 'getting-started-web-development',
    excerpt: 'A comprehensive guide for beginners looking to start their journey in web development.',
    date: '2024-03-15',
    category: 'Development',
    link: 'https://www.freecodecamp.org/'
  },
  {
    title: 'Best Practices for agile methodologies',
    slug: 'modern-javascript-best-practices',
    excerpt: 'Embrace feedback.',
    date: '2024-03-10',
    category: 'Agile',
    link: 'https://www.linkedin.com/advice/3/heres-how-you-can-leverage-continuous-feedback-w9tje?utm_source=share&utm_medium=member_desktop&utm_campaign=copy'
  },
  // Add more blog posts here
];
---

<Layout title="Blog">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8 text-center">Blog</h1>
    
    <div class="grid gap-8">
      {posts.map(post => (
        <article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="flex justify-between items-start mb-4">
            <span class="bg-purple-100 text-purple-800 text-sm font-medium px-3 py-1 rounded-full">
              {post.category}
            </span>
            <time class="text-gray-500 text-sm">{new Date(post.date).toLocaleDateString()}</time>
          </div>
          <h2 class="text-2xl font-bold mb-2">
            <a href={post.link} target="_blank" rel="noopener noreferrer" class="hover:text-purple-600 transition-colors">
              {post.title}
            </a>
          </h2>
          <p class="text-gray-600 mb-4">{post.excerpt}</p>
          <a 
            href={post.link} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-purple-600 hover:text-purple-700 inline-flex items-center"
          >
            Read more
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout>