---
import Layout from '../layouts/Layout.astro';

const certificates = [
  {
    title: 'AWS Certified Solutions Architect',
    issuer: 'Amazon Web Services',
    date: '2024',
    image: 'https://via.placeholder.com/400x300',
    link: '#'
  },
  {
    title: 'Professional Web Developer',
    issuer: 'Google',
    date: '2023',
    image: 'https://via.placeholder.com/400x300',
    link: '#'
  },
  // Add more certificates
];
---

<Layout title="Certificates">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12 text-center">Certificates & Achievements</h1>
    
    <div class="grid md:grid-cols-3 gap-8">
      {certificates.map(cert => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
          <img src={cert.image} alt={cert.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-lg font-bold mb-2">{cert.title}</h3>
            <p class="text-gray-600 mb-1">{cert.issuer}</p>
            <p class="text-gray-500 text-sm mb-4">{cert.date}</p>
            <a href={cert.link} class="text-purple-600 hover:text-purple-700 inline-flex items-center">
              View Certificate
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>