---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'TA-E2E-Swaglabs',
    description: 'Automated testing with Cypress for the Swaglabs application',
    technologies: ['JavaScript', 'Cypress', 'VScode', 'HTML', 'CSS'],
    image: '/public/TA-E2E-Swaglabs.jpg',
    link: 'https://github.com/kitoyppd23/TA-E2E-Swaglabs',
    videoLink: 'https://www.linkedin.com/feed/update/urn:li:activity:7125584687556665345/?originTrackingId=OV%2BbW4gbRp2xP%2BGgir6ECQ%3D%3D'
  },
  {
    title: 'Task Management App',
    description: 'A productivity app for managing personal and team tasks',
    technologies: ['Vue.js', 'Firebase', 'Tailwind CSS'],
    image: 'https://via.placeholder.com/600x400',
    link: '#'
  },
  // Add more projects
];
---

<Layout title="Projects">
  <div class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12 text-center">Projects</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      {projects.map(project => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{project.title}</h3>
            <p class="text-gray-600 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map(tech => (
                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
                  {tech}
                </span>
              ))}
            </div>
            <a href={project.link} class="text-purple-600 hover:text-purple-700 inline-flex items-center">
              View Project
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
            {project.videoLink && (
              <a href={project.videoLink} class="text-purple-600 hover:text-purple-700 inline-flex items-center mt-2 ml-4">
                View Video
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>