---
import Layout from '../layouts/Layout.astro';

const skills = {
  advanced: [
    { name: 'JavaScript', level: 55 },
    { name: 'React', level: 35 },
    { name: 'Node.js', level: 35 },
    { name: 'TypeScript', level: 55 }
  ],
  intermediate: [
    { name: 'Java', level: 35 },
    { name: 'SQL', level: 10 },
    { name: 'AWS', level: 10 }
  ],
  learning: [
    { name: 'SpringBoot', progress: 20 },
    { name: 'React', progress: 30 },
  
  ]
};
---

<Layout title="Skills & Learning">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12 text-center">Skills & Learning Journey</h1>
    
    <!-- Advanced Skills -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Advanced Skills</h2>
      <div class="space-y-4">
        {skills.advanced.map(skill => (
          <div>
            <div class="flex justify-between mb-1">
              <span class="font-medium">{skill.name}</span>
              <span class="text-gray-600">{skill.level}%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2.5">
              <div class="bg-purple-600 h-2.5 rounded-full" style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Intermediate Skills -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Intermediate Skills</h2>
      <div class="space-y-4">
        {skills.intermediate.map(skill => (
          <div>
            <div class="flex justify-between mb-1">
              <span class="font-medium">{skill.name}</span>
              <span class="text-gray-600">{skill.level}%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2.5">
              <div class="bg-blue-500 h-2.5 rounded-full" style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Learning Progress -->
    <section>
      <h2 class="text-2xl font-bold mb-6">Currently Learning</h2>
      <div class="space-y-4">
        {skills.learning.map(skill => (
          <div>
            <div class="flex justify-between mb-1">
              <span class="font-medium">{skill.name}</span>
              <span class="text-gray-600">{skill.progress}%</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2.5">
              <div class="bg-green-500 h-2.5 rounded-full" style={`width: ${skill.progress}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>