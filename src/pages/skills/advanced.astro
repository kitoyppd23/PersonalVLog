---
import Layout from '../../layouts/Layout.astro';

const advancedSkills = [
  {
    name: 'JavaScript',
    level: 70,
    description: ' JavaScript development including use for creating front with html and css and logic.',
    projects: [
      
      'I used it for automation projects and writing for frameworks like Cypres and for creating interactions with users in the interface.'
    ]
  },
  {
    name: 'Cypress',
    level: 70,
    description: 'creation of custom testing frameworks for CI and CD in agile and reliable deliveries.',
    projects: [
      ' Fast execution (runs directly in the browser, without needing WebDriver)',
      'Easy debugging (has an interactive panel to inspect each test step)',
      'Native support for JavaScript/TypeScript',
      'Real-time execution (hot reloading while writing tests)',
      'More reliable tests (lower risk of flakiness, intermittent tests)'
    ]
  },
  {name: 'Selenium',
    level: 55,
    description: 'More complex tests such as customer signatures, biometrics and integration of micro and multi services',
    projects: [
      ' Distributed execution (uses WebDriver to interact with different browsers)',
      'Support for multiple languages (Java, Python, C#, JavaScript, among others)',
      'Wide compatibility (works on various browsers and operating systems)',
      'Integration with frameworks (JUnit, TestNG, Cucumber, etc.)',
      'Scalable tests (possibility of running tests in a grid for parallel execution)'
    ]}
  // Add more skills as needed
];
---

<Layout title="Advanced Skills">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12 text-center">Advanced Skills</h1>
    
    <div class="space-y-8">
      {advancedSkills.map(skill => (
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-bold text-purple-600">{skill.name}</h2>
            <span class="text-gray-600 font-semibold">{skill.level}%</span>
          </div>
          
          <div class="w-full bg-gray-200 rounded-full h-2.5 mb-6">
            <div 
              class="bg-purple-600 h-2.5 rounded-full" 
              style={`width: ${skill.level}%`}
            ></div>
          </div>
          
          <p class="text-gray-700 mb-4">{skill.description}</p>
          
          <div class="mt-4">
            <h3 class="font-semibold mb-2">Related Projects & Experience:</h3>
            <ul class="list-disc list-inside space-y-1 text-gray-600">
              {skill.projects.map(project => (
                <li>{project}</li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>