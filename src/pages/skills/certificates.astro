---
import Layout from '../../layouts/Layout.astro';

const certificates = [
  {
    title: 'AWS Certified Solutions Architect',
    issuer: 'Amazon Web Services',
    date: '2024',
    validUntil: '2027',
    credentialId: 'AWS-1234-5678',
    description: 'Advanced certification for designing distributed systems on AWS.',
    skills: [
      'Cloud Architecture',
      'Scalability',
      'Security',
      'Cost Optimization'
    ],
    image: 'https://via.placeholder.com/400x300'
  },
  {
    title: 'Professional Web Developer',
    issuer: 'Google',
    date: '2023',
    validUntil: '2026',
    credentialId: 'GWD-9876-5432',
    description: 'Comprehensive certification covering modern web development practices.',
    skills: [
      'Frontend Development',
      'Progressive Web Apps',
      'Performance Optimization',
      'Web Security'
    ],
    image: 'https://via.placeholder.com/400x300'
  },
  // Add more certificates as needed
];
---

<Layout title="Certificates">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12 text-center">Professional Certificates</h1>
    
    <div class="space-y-8">
      {certificates.map(cert => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="md:flex">
            <div class="md:w-1/3">
              <img 
                src={cert.image} 
                alt={cert.title} 
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-6 md:w-2/3">
              <h2 class="text-2xl font-bold text-purple-600 mb-2">{cert.title}</h2>
              <p class="text-gray-700 mb-4">{cert.description}</p>
              
              <div class="grid md:grid-cols-2 gap-4 mb-4">
                <div>
                  <p class="text-sm text-gray-600">Issuer</p>
                  <p class="font-semibold">{cert.issuer}</p>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Date Issued</p>
                  <p class="font-semibold">{cert.date}</p>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Valid Until</p>
                  <p class="font-semibold">{cert.validUntil}</p>
                </div>
                <div>
                  <p class="text-sm text-gray-600">Credential ID</p>
                  <p class="font-semibold">{cert.credentialId}</p>
                </div>
              </div>
              
              <div>
                <h3 class="font-semibold mb-2">Skills Covered:</h3>
                <div class="flex flex-wrap gap-2">
                  {cert.skills.map(skill => (
                    <span class="bg-purple-100 text-purple-800 text-sm px-3 py-1 rounded-full">
                      {skill}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>