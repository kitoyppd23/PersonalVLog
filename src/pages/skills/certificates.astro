---
import Layout from '../../layouts/Layout.astro';

const certificates = [
  {
    title: 'Scrum Professional Certificate',
    issuer: 'CertiProf',
    date: '2023',
    //validUntil: '2027',
    credentialId: '90675406',
    description: 'Scrum Fundamentals.',
    skills: [
      'Covering its principles, roles, and events. It is ideal for those who want to understand the basic concepts of the agile framework before advancing to more advanced certifications, such as Scrum Master Certified (SMC).',
      //'Scalability',
      //'Security',
      //'Cost Optimization'
    ],
    image: '/scrum professional.jpg'
  },  
  {
    title: 'Introduction to quality assurance',
    issuer: 'Iterasys',
    date: '2023',
    //validUntil: '2026',
   // credentialId: 'GWD-9876-5432',
    description: 'Covering the key concepts, methodologies, and tools used to ensure software quality.',
    skills: [
      'Types of tests',
      'agile methodologies',
      'testing tools',
      'processes and best practices'
    ],
    image: '/Iterasys.jpg'
  },
  {
    title: 'CT-TAE',
    issuer: 'Chronos Academy',
    date: '2023',
    //validUntil: '2026',
    //credentialId: 'GWD-9876-5432',
    description: 'Understanding and learning international standards regarding best practices in software quality, specifically in the areas of test automation and delivery..',
    skills: [
      'Understanding the manual',
      'Regulations',
      'testing tools',
      'preparing for the test'
    ],
    image: '/tae.jpg'
  	  },
      {
        title: 'Professional Quality Engineer',
        issuer: 'F1rst - Santander',
        date: '2024',
        //validUntil: '2026',
        //credentialId: 'GWD-9876-5432',
        description: 'Banco Santanders professional training course for quality engineers.',
        skills: [
          'Test Automation',
          'SAT Automation Framework',
          'Selenium',
          'Pipeline',
          'Web, Mobile and API'
        ],
        image: '/professionalSantander.jpg'
      }

  // Add more certificates as needed
];
---

<Layout title="Certificates">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12 text-center">Professional Certificates</h1>
    
    <div class="space-y-8">
      {certificates.map(cert => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="md:flex">
            <div class="md:w-1/3">
              <img 
                src={cert.image} 
                alt={cert.title} 
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-6 md:w-2/3">
              <h2 class="text-2xl font-bold text-purple-600 mb-2">{cert.title}</h2>
              <p class="text-gray-700 mb-4">{cert.description}</p>
              
              <div class="grid md:grid-cols-2 gap-4 mb-4">
                <div>
                  <p class="text-sm text-gray-600 dark:text-gray-400">Issuer</p>
                  <p class="font-semibold text-gray-900">{cert.issuer}</p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 dark:text-gray-400">Date Issued</p>
                  <p class="font-semibold text-gray-900">{cert.date}</p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 dark:text-gray-400">Valid Until</p>
                  <p class="font-semibold text-gray-900">{cert.validUntil}</p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 dark:text-gray-400">Credential ID</p>
                  <p class="font-semibold text-gray-900">{cert.credentialId}</p>
                </div>
              </div>
              
              <div>
                <h3 class="font-semibold mb-2 text-gray-900">Skills Covered:</h3>
                <div class="flex flex-wrap gap-2">
                  {cert.skills.map(skill => (
                    <span class="bg-purple-100 text-purple-800 text-sm px-3 py-1 rounded-full">
                      {skill}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>