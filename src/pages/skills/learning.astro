---
import Layout from '../../layouts/Layout.astro';

const learningSkills = [
  {
    name: 'Spring Boot',
    progress: 20,
    description: 'I am at the beginning of the training path provided by Alura, where, in addition to enriching my technical understanding, I also apply theoretical knowledge alongside methodologies and architectural design.',
    currentFocus: [
      'Rapid development (simplifies the setup and development of Java applications)',
      'Microservices support (designed for building scalable and modular applications)',
      'Powerful dependency management (leverages Spring s ecosystem and Maven/Gradle)',
      'Integration-ready (works seamlessly with databases, messaging systems, and cloud services)',
      'Embedded servers (comes with Tomcat, Jetty, or Undertow for easy deployment)'
    ],
    resources: [
      'The Rust Programming Language Book',
      'Rust by Example',
      'Community Projects',
      'Spring Framework Documentation',
      'Spring Boot in Action (Book)',
      'Alura Spring Boot Course'
    ]
  },
  {
    name: 'React',
    progress: 30,
    description: 'Improve front end creation',
    currentFocus: [
      'Rich ecosystem (integrates with various libraries and state management tools like Redux)',
      'Fast rendering (optimizes UI updates and ensures a smooth user experience)',
      'Virtual DOM (improves performance by minimizing direct updates to the real DOM)'
    ],
    resources: [
      '',
      '',
      '',
      '',
      '',
      ''
    ]
   
  },
  // Add more skills as needed
];
---

<Layout title="Learning Journey">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-12 text-center">Learning Journey</h1>
    
    <div class="space-y-8">
      {learningSkills.map(skill => (
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-bold text-green-600">{skill.name}</h2>
            <span class="text-gray-600 font-semibold">{skill.progress}% Complete</span>
          </div>
          
          <div class="w-full bg-gray-200 rounded-full h-2.5 mb-6">
            <div 
              class="bg-green-500 h-2.5 rounded-full" 
              style={`width: ${skill.progress}%`}
            ></div>
          </div>
          
          <p class="text-gray-700 mb-4">{skill.description}</p>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h3 class="font-semibold mb-2">Current Focus:</h3>
              <ul class="list-disc list-inside space-y-1 text-gray-600">
                {skill.currentFocus.map(focus => (
                  <li>{focus}</li>
                ))}
              </ul>
            </div>
            
            <div>
              <h3 class="font-semibold mb-2">Learning Resources:</h3>
              <ul class="list-disc list-inside space-y-1 text-gray-600">
                {skill.resources.map(resource => (
                  <li>{resource}</li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>